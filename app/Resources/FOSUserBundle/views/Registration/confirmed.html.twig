{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="container-fluid">
        <section class="container">
            <div class="container-page">
                <div class="col-lg-12">
                    <h1 class="page-header">Merci de votre inscription !
                        <small>Chez Incom eSport.</small>
                    </h1>
                </div>
                <div class="col-md-12">
                    <br />
                    <h3>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</h3>
                    {% if app.session is not empty %}
                        {% set targetUrl = app.session.get('_security.' ~ app.security.token.providerKey ~ '.target_path') %}
                        {% if targetUrl is not empty %}<p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>{% endif %}
                    {% endif %}
                    <br>
                    <p>Vous allez recevoir un mail de <strong>confirmation</strong> dans les prochaines heures.</p>

                    <p> Je vous invite à vérifier vos spams ! </p>
                    <hr>
                    Si vous ne recevez pas le mail, contactez nous à cette adresse : <strong>contact@incomesport.fr</strong>




                </div>
            </div>

    </div>
    </section>
    </div>
{% endblock fos_user_content %}
