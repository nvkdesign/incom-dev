{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Réinitialisation de votre mot de passe.
                    <small>Incom eSport.</small>
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="text-center">
                                <i class="fa fa-lock fa-4x"></i>
                                <h3 class="text-center">Mot de passe oublié ?</h3>
                                <p>Si vous avez oublié votre mot de passe, réinitialisé le.</p>
                                <div class="panel-body">

                                    <form class="form"><!--start form--><!--add form action as needed-->
                                        <fieldset>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"></i></span>

                                                    <input id="username" placeholder="{{ 'resetting.request.username'|trans }}" class="form-control" type="text" name="username" required="required">

                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <input class="btn btn-lg btn-primary btn-block" value="{{ 'resetting.request.submit'|trans }}" type="submit">
                                            </div>
                                            {% if invalid_username is defined %}
                                                <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
                                            {% endif %}
                                        </fieldset>
                                    </form><!--/end form-->

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
