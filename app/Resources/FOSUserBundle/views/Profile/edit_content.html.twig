{% trans_default_domain 'FOSUserBundle' %}
<div id="page-wrapper">
    <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Modifier mon profil</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Modifier votre photo de profil test
                </div>
                <!-- /.panel-heading -->
                <div class="row">
                    <div class="col-lg-6">
                        <div class="panel-body">
                            <h4>Votre image actuelle </h4>
                            <img src="{{('/images/users/' ~ app.user.imageName) | imagine_filter('my_thumb') }}" alt="user image" class="img-rounded">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="panel-body">
                            <h4>Changer votre image de profil </h4><br/>
                            <div class="form-group">
                                <label>Importer un fichier</label>
                                {{ form_errors(form.imageFile) }}
                                {{ form_widget(form.imageFile) }}
                            </div>
                            <p> une image de 140x140px est recommandé.</p>
                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Vos informations personnelles
                </div>
                <div class="panel-body">
                    <form role="form">
                        <div class="form-group">
                            <label>Prénom : </label>
                            {{ form_widget(form.prenom, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-group">
                            <label>Nom : </label>
                            {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                            <div>
                            </div>
                        <form class="form-horizontal col-lg-4" role="form">
                            <div class="form-group">
                                <label for="date">Date de naissance</label>
                                {{ form_widget(form.dateanniversaire) }}
                            </div>
                        </form>
                            <label>Votre Pays</label><br>
                                {{ form_widget(form.pays) }}
                        <hr>
                        <label>Modifier votre adresse e-mail</label>
                        <div class="form-group">
                            {{ form_errors(form.email) }}
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                            {{ form_errors(form.current_password) }}
                            {{ form_label(form.current_password) }}
                            {{ form_widget(form.current_password, { 'attr': {'class': 'form-control'} }) }}
                            <br/>
                        {{ form_rest(form) }}
                            <input type="submit" class="btn btn-success" value="{{ 'profile.edit.submit'|trans }}" />
                            </div>
                        </div>

                </div>
                <!-- /.panel-body -->
            </div>
        </div>
        <!-- /.col-lg-6 -->
    </div>
</div>



<!-- /#page-wrapper -->
</form>
</div>

