{% extends '::base.html.twig' %}
{% block body %}



<!-- Page Content -->

<div class="container">


    <div>
    </div>


    <!-- Page Heading/Breadcrumbs -->
    <div class="row-centered">
        <div class="col-lg-12">
            <div class="col-lg-9">
                <h1 class="page-header">Admin dashboard
                    <small> Ajouter une équipe !</small>
                </h1>
            </div>
            <div class="col-lg-3">
                <a href= {{ path ('event_event_admin') }}><button type="button" class="btn btn-info">Retour à la liste des paris</button></a>
            </div>
        </div>
    </div>
    <form action={{ path('event_event_addTeam') }} {{ form_enctype(FormTeam) }} method="POST">
        <div class="row">
            <div class="col-lg-12">

                <h3>{{ form_label(FormTeam.nom, "Nom de l'équipe : ") }} </h3>
                {{ form_errors(FormTeam.nom) }}
                {{ form_widget(FormTeam.nom, { 'attr': {'class': 'form-control'} }) }}

            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">

                <h3>{{ form_label(FormTeam.description, "Description de l'équipe : ") }} </h3>
                {{ form_errors(FormTeam.description) }}
                {{ form_widget(FormTeam.description, { 'attr': {'class': 'form-control'} }) }}

            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">

                <h3>{{ form_label(FormTeam.jeu, "Jeu de l'équipe : ") }} </h3>
                {{ form_errors(FormTeam.jeu) }}
                {{ form_widget(FormTeam.jeu, { 'attr': {'class': 'form-control'} }) }}

            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-lg-12">
                {{ form_widget(FormTeam.valider, { 'attr': {'class': 'btn btn-primary btn-lg btn-block'} }) }}
                {{ form_rest(FormTeam) }}

            </div>
        </div>
    </form>

        {% endblock %}

