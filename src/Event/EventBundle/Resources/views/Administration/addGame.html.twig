{% extends '::base.html.twig' %}
{% block body %}



<!-- Page Content -->

<div class="container">


    <div>
    </div>


    <!-- Page Heading/Breadcrumbs -->
    <div class="row-centered">
        <div class="col-lg-12">
            <div class="col-lg-9">
                <h1 class="page-header">Admin dashboard
                    <small> Ajouter une équipe !</small>
                </h1>
            </div>
            <div class="col-lg-3">
                <a href= {{ path ('event_event_admin') }}><button type="button" class="btn btn-info">Retour à la liste des paris</button></a>
            </div>
        </div>
    </div>
    <form action={{ path('event_event_addGame') }} {{ form_enctype(FormGame) }} method="POST">
        <div class="row">
            <div class="col-lg-12">

                <h3>{{ form_label(FormGame.nom, "Nom du jeu : ") }} </h3>
                {{ form_errors(FormGame.nom) }}
                {{ form_widget(FormGame.nom, { 'attr': {'class': 'form-control'} }) }}

            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">

                <h3>{{ form_label(FormGame.description, "Description du jeu : ") }} </h3>
                {{ form_errors(FormGame.description) }}
                {{ form_widget(FormGame.description, { 'attr': {'class': 'form-control'} }) }}

            </div>
        </div>

        <hr>
        <div class="row">
            <div class="col-lg-12">
                {{ form_widget(FormGame.valider, { 'attr': {'class': 'btn btn-primary btn-lg btn-block'} }) }}
                {{ form_rest(FormGame) }}

            </div>
        </div>
    </form>

        {% endblock %}

